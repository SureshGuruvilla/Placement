<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.admin.svsplacement.CommentActivity"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/logintext1">
                <EditText
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/textcommentbox"
                    android:id="@+id/comment_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/commenttext"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <TextView

                    android:gravity="center"
                    android:id="@+id/comment_button"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:background="@drawable/ic_send_blue" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>

